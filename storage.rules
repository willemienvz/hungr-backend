rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default: deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // ===== HELPER FUNCTIONS FOR ROLE-BASED ACCESS =====
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Get current user's data from Firestore
    function getCurrentUser() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data;
    }
    
    // Check if user has specific permission
    function hasPermission(permission) {
      return isAuthenticated() && getCurrentUser().permissions[permission] == true;
    }
    
    // Check if user is team owner (has no parentId)
    function isTeamOwner() {
      return isAuthenticated() && 
        (getCurrentUser().parentId == '' || getCurrentUser().parentId == null);
    }
    
    // Check if user belongs to the same team as the target user
    function isTeamMember(targetUserId) {
      return isAuthenticated() && 
        getCurrentUser().parentId == firestore.get(/databases/(default)/documents/users/$(targetUserId)).data.parentId;
    }
    
    // Media files: allow authenticated users to manage their own files or team files (with appropriate permissions)
    match /media/{userId}/{fileName} {
      // Allow read for authenticated users (team members can view each other's media)
      allow read: if isAuthenticated() && 
        (request.auth.uid == userId || isTeamMember(userId) || hasPermission('editBranding'));
      
      // Allow write (upload/update/delete) by the owner or team members with appropriate permissions
      allow write: if isAuthenticated() && 
        (request.auth.uid == userId || 
         (isTeamMember(userId) && hasPermission('editBranding')))
        && request.resource.size < 10 * 1024 * 1024 // 10MB max
        && request.resource.contentType.matches('image/.*');
    }
    
    // Allow read access to public media files
    match /media/public/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && hasPermission('editBranding');
    }
    
    // Team-specific media folder (for shared team assets)
    match /media/team/{teamId}/{fileName} {
      // Team members can read team assets
      allow read: if isAuthenticated() && 
        (getCurrentUser().parentId == teamId || isTeamOwner());
      
      // Team owners and users with branding permissions can manage team assets
      allow write: if isAuthenticated() && 
        (isTeamOwner() || hasPermission('editBranding'))
        && request.resource.size < 10 * 1024 * 1024 // 10MB max
        && request.resource.contentType.matches('image/.*');
    }
  }
}
