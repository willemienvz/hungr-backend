rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default: deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Media files: allow authenticated users to manage their own files
    match /media/{userId}/{fileName} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow write (upload/update/delete) only by the owner
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024 // 10MB max
        && request.resource.contentType.matches('image/.*');
    }
    
    // Allow read access to public media files
    match /media/public/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
